PORT=8080
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

DB_VENDOR=mongodb
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# FIREBASE (optional)
# DB_VENDOR=firebase
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Uploads
# Use local disk in development (files saved to /uploads)
UPLOADS_PROVIDER=local

# Or use Cloudinary in production to avoid ephemeral disk
# UPLOADS_PROVIDER=cloudinary
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
# or provide these individually:
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
# CLOUDINARY_FOLDER=shop-uploads
